<UserControl x:Class="CommaBoard.Wpf.Resources.UserControls.LogoHanWhaTechwin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommaBoard.Wpf.Resources.UserControls"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="/CommaBoard.Wpf;component/Resources/Styles/CommaBoardStyle.xaml">
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{StaticResource GridBorder}">
        <Grid Style="{StaticResource PanelGrid}">
            <Image Height="80" Margin="5">
                <Image.Source>
                    <BitmapImage  UriSource="/Resources/Images/HanWhaLogo.jpg" />
                </Image.Source>
            </Image>
        </Grid>
    </Border>
</UserControl>
